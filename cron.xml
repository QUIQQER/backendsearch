<?xml version="1.0" encoding="UTF-8"?>
<crons>
    <cron exec="\QUI\BackendSearch\Cron::buildSearchCache">
        <title>
            <locale group="quiqqer/backendsearch" var="cron.search.build.title"/>
        </title>
        <description>
            <locale group="quiqqer/backendsearch" var="cron.search.build.description"/>
        </description>

        <autocreate>
            <scope>languages</scope>
            <interval>0 0 * * *</interval>
            <active>1</active>
        </autocreate>
    </cron>
</crons>
